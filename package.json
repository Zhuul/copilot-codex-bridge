{
  "repository": {
    "type": "git",
    "url": "https://github.com/Zhuul/copilot-codex-bridge.git"
  },
  "name": "copilot-codex-bridge",
  "publisher": "zhuul",
  "displayName": "copilot-codex-bridge",
  "description": "Copilot Codex bridge using JavaScript",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "activationEvents": [
    "onChatParticipant:copilot-codex-bridge",
    "onCommand:copilot-codex-bridge.codexQuery"
  ],
  "categories": [
    "Other"
  ],
  "main": "./extension.js",
  "contributes": {
  "commands": [{
    "command": "copilot-codex-bridge.codexQuery",
    "title": "Query Codex"
   }],
  "chat": [{
    "id": "copilot-codex-bridge",
    "name": "CODEX Bridge"
   }],
   "configuration": {
     "title": "Copilot Codex Bridge",
     "properties": {
       "codexBridge.path": {
         "type": "string",
         "markdownDescription": "Absolute path to an external bridge CLI. If empty, the extension uses the bundled `bridge-echo.js`. You can also set the environment variables `CODEX_BRIDGE_PATH` or `CODEX_CLI_PATH`.",
         "default": ""
       }
     }
   }
 },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "eslint": "^9.39.2",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
